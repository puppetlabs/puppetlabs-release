pipeline {
  agent  {
    label 'k8s-worker'
  }

  options {
    timestamps()
    ansiColor('xterm')
    preserveStashes(buildCount: 15)
  }

  environment {
    ABS_TOKEN = credentials('always-be-scheduling-k8s')
    ARTIFACTORY_API_KEY = credentials('api_token_for_jenkins_to_artifactory')
  }

  stages {
    stage('BuildArtifacts') {
      matrix {
        axes {
          axis {
            name 'PROJECT'
            values 'puppet-nightly-release'
          }
        }
        stages {
          stage('Build') {
            steps {
              script {
                sh "./ci/vanagon_build"
              }
            }
          }
        }
      }
    }
    stage('SignAndShip') {
      steps {
        script {
          sh "./ci/vanagon_sign_and_ship"
        }
      }
    }
  }
}
